#!/bin/bash
# validation.job
# Plots top 100 docking scores comparing ChEMBL vs ZINC molecules
# to validate the docking pipeline recovers known good binders.
#
# Usage:
#   sbatch validation.job

#SBATCH --nodes=1
#SBATCH --ntasks=1
#SBATCH --mem=59GB
#SBATCH --time=1:00:00
#SBATCH --account=qcb_640
#SBATCH --partition=main

module purge
module load gcc/11.3.0
module load python/3.9.12
module load conda

conda init bash
source ~/.bashrc
source activate project_1

mkdir -p log

python validation_test.py "$@" \
    1> log/validation.$SLURM_JOB_ID.log \
    2> log/validation.$SLURM_JOB_ID.err
